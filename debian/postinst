#!/bin/sh
# postinst script for bbbs-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	# If the /opt/bbbs not already present, proceed with the install
	if [ -d /opt/bbbs ]
	then
	    # If archive file is available, then untar it to do the install.  If not present, display a message regarding that.
	    if [ -f /tmp/bbbs_lii.tar.gz ]
	    then
		# configure 'bbbs' user and group as neccessary
		getent passwd bbbs >/dev/null 2>&1 || adduser --system --quiet --home /opt/bbbs --group --shell /bin/bash --gecos "BBBS Admin" bbbs || addgroup bbbs dialout
	        # Change to where BBBS will be installed
	        cd /opt
	        # Untar BBBS to /opt/bbbs
	        /bin/tar -xvvzf /tmp/bbbs_lii.tar.gz
	        # Remove unneccessary file
	        rm -f /opt/file_id.diz
	    else
		# The BBBS archive was not present for the installation
	        echo "BBBS archive is not present;  download it from http://www.bbbs.net/ftp/bbbs_lii.tar.gz to /tmp, then run this again."
	        exit 1
    	    fi
	else
	    # BBBS directory is already present
	    echo "The BBBS directory is already present, aborting."
	    exit 1
    	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


